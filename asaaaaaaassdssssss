#include <stdio.h>
#include <stdlib.h>

char *rem(char str[], int n)
{

   int index = 0;

   for (int i=0; i<n; i++) {
        if (str[i] != str[i-1]){
            str[index++] = str[i];
        }
   }

   return str;
}

int main()
{
    int n;
    char A[]="asaaaaaaassdssssss";
    n= sizeof(A)/sizeof(A[0]);
    printf("%s",rem(A,n));

}
